rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * DIAGNOSTIC RULES - ABSOLUTE MINIMAL ACCESS
     * These rules allow ANY signed-in user to read and write ANY document.
     * This is intended for debugging to see if the rules are actually being deployed.
     */

    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    /**
     * If you are STILL seeing "Missing or insufficient permissions" with these rules active,
     * it means your changes are NOT being published to the Firebase cloud.
     */
  }
}
